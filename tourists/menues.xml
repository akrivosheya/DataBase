<menues>
	<menu>
		<name>activation</name>
		<isStarting>true</isStarting>
		<texts>
			<text>Connect to Database</text>
		</texts>
		<fields>
			<field>User</field>
			<field>Password</field>
			<field>Database</field>
		</fields>
		<buttons>
			<button>
				<text>Connect</text>
				<type>connect</type>
				<param>activity</param>
			</button>
		</buttons>
	</menu>
	<menu>
		<name>activity</name>
		<texts>
			<text>Choose activity</text>
		</texts>
		<buttons>
			<button>
				<text>Reset database</text>
				<type>reset</type>
			</button>
			<button>
				<text>Set test database</text>
				<type>test</type>
			</button>
			<button>
				<text>Select information</text>
				<type>next</type>
				<param>select</param>
			</button>
			<button>
				<text>Edit information</text>
				<type>next</type>
				<param>edit</param>
			</button>
			<button>
				<text>Disconnect</text>
				<type>disconnect</type>
				<param>activation</param>
			</button>
		</buttons>
	</menu>
	<menu>
		<name>select</name>
		<texts>
			<text>Choose what you want to select</text>
		</texts>
		<buttons>
			<button>
				<text>Tourists</text>
				<type>next</type>
				<param>select_tourists</param>
			</button>
			<button>
				<text>Coaches</text>
				<type>next</type>
				<param>select_coaches</param>
			</button>
			<button>
				<text>Directors</text>
				<type>next</type>
				<param>select_directors</param>
			</button>
			<button>
				<text>Competitions</text>
				<type>next</type>
				<param>select_competitions</param>
			</button>
			<button>
				<text>Coaches time</text>
				<type>next</type>
				<param>select_coaches_time</param>
			</button>
			<button>
				<text>Routes</text>
				<type>next</type>
				<param>select_routes</param>
			</button>
			<button>
				<text>Instructors</text>
				<type>next</type>
				<param>select_instructors</param>
			</button>
			<button>
				<text>Back</text>
				<type>next</type>
				<param>activity</param>
			</button>
		</buttons>
	</menu>
	<menu>
		<name>edit</name>
		<texts>
			<text>Choose what you want to edit</text>
		</texts>
		<buttons>
			<button>
				<text>Tourists</text>
				<type>to_edit</type>
				<param>tourists.helpers.TouristsHelper</param>
			</button>
			<button>
				<text>Sportsmen</text>
				<type>to_edit</type>
				<param>edit_sportsmen</param>
			</button>
			<button>
				<text>Coaches</text>
				<type>to_edit</type>
				<param>edit_coaches</param>
			</button>
			<button>
				<text>Directors</text>
				<type>to_edit</type>
				<param>edit_directors</param>
			</button>
			<button>
				<text>Sections</text>
				<type>to_edit</type>
				<param>edit_sections</param>
			</button>
			<button>
				<text>Groups</text>
				<type>to_edit</type>
				<param>edit_groups</param>
			</button>
			<button>
				<text>Trainings</text>
				<type>to_edit</type>
				<param>edit_trainings</param>
			</button>
			<button>
				<text>Trains</text>
				<type>to_edit</type>
				<param>edit_trains</param>
			</button>
			<button>
				<text>Attendance</text>
				<type>to_edit</type>
				<param>edit_attendance</param>
			</button>
			<button>
				<text>Competitions</text>
				<type>to_edit</type>
				<param>edit_competitions</param>
			</button>
			<button>
				<text>Participation</text>
				<type>to_edit</type>
				<param>edit_participation</param>
			</button>
			<button>
				<text>Hikes</text>
				<type>to_edit</type>
				<param>edit_hikes</param>
			</button>
			<button>
				<text>Routes</text>
				<type>to_edit</type>
				<param>edit_routes</param>
			</button>
			<button>
				<text>Points</text>
				<type>to_edit</type>
				<param>edit_points</param>
			</button>
			<button>
				<text>Points of routes</text>
				<type>to_edit</type>
				<param>edit_contains</param>
			</button>
			<button>
				<text>Checkoints</text>
				<type>to_edit</type>
				<param>edit_checkpoints</param>
			</button>
			<button>
				<text>Conducted hikes</text>
				<type>to_edit</type>
				<param>edit_conducted_hikes</param>
			</button>
			<button>
				<text>Diaries</text>
				<type>to_edit</type>
				<param>edit_diaries</param>
			</button>
			<button>
				<text>Went to hike</text>
				<type>to_edit</type>
				<param>edit_went_hike</param>
			</button>
			<button>
				<text>Back</text>
				<type>next</type>
				<param>activity</param>
			</button>
		</buttons>
	</menu>
	<menu>
		<name>select_tourists</name>
		<texts>
			<text>Choose tourists filter</text>
		</texts>
		<fields>
			<field>Section</field>
			<field>Group</field>
			<field>Sex</field>
			<field>Birth</field>
			<field>Age</field>
			<field>Hike</field>
			<field>Hikes count</field>
			<field>Route</field>
			<field>Point</field>
			<field>Category</field>
			<field>Can go to hike</field>
		</fields>
		<flags>
			<flag>All routes</flag>
			<flag>Is sportsman</flag>
			<flag>Instructor is coach</flag>
		</flags>
		<buttons>
			<button>
				<text>Find</text>
				<type>select</type>
				<param>tourists.helpers.TouristsHelper</param>
			</button>
			<button>
				<text>Back</text>
				<type>next</type>
				<param>select</param>
			</button>
		</buttons>
	</menu>
	<menu>
		<name>to_edit</name>
		<hasTable>true</hasTable>
		<buttons>
			<button>
				<text>Create</text>
				<type>create</type>
			</button>
			<button>
				<text>Update</text>
				<type>update</type>
			</button>
			<button>
				<text>Delete</text>
				<type>delete</type>
			</button>
			<button>
				<text>Back</text>
				<type>next</type>
				<param>edit</param>
			</button>
		</buttons>
	</menu>
</menues>